{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "include": "src/**/*.ts"
}